{
  "extends": [
    "standard"
  ],
  "globals": {
    "describe": true,
    "it": true,
    "expect": true,
    "beforeAll": true,
    "afterAll": true
  },
  "rules": {
    "arrow-parens": [
      2,
      "as-needed",
      {
        "requireForBlockBody": true
      }
    ],
    "padded-blocks": [
      "error",
      {
        "classes": "always"
      }
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1,
        "flatTernaryExpressions": true
      }
    ],
    "no-param-reassign": 0,
    "complexity": 0,
    "eqeqeq": [
      "error",
      "always"
    ],
    "no-var": 2,
    "semi": [
      2,
      "always"
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "yoda": 0,
    "arrow-spacing": 2,
    "dot-location": [
      2,
      "property"
    ],
    "prefer-arrow-callback": 2,
    "operator-linebreak": [
      2,
      "after",
      {
        "overrides": {
          "?": "ignore",
          ":": "ignore"
        }
      }
    ],
    "no-fallthrough": 0
  }
}
